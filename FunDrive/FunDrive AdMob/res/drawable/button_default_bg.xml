<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/m_tab_clr" />
            <stroke
                android:width="1dp"
                android:color="#028A7C" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/m_tab_clr"
                android:endColor="#028A7C"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#028A7C" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>