<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_clr" >

    <ImageView
        android:id="@+id/image_comlogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/img_no"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/text_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/image_comlogo"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/infotext_clr" />

    <TextView
        android:id="@+id/text_comemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_appname"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/image_comlogo"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/infotext_clr" />

    <TextView
        android:id="@+id/text_comwebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_comemail"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/image_comlogo"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/infotext_clr" />

    <WebView
        android:id="@+id/webView_comdes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_abt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txt_abt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/image_comlogo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/menu_about"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/infotext_clr" />

</RelativeLayout>