<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".WallMainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >

            <Button
                android:id="@+id/btnImageUpload"
                style="@style/DefaultButtonText"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/general1_hoverbtnselect"
                android:padding="10dp"
                android:text="@string/image_upload"
                android:textColor="@color/upload_textcolor"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >

            <Button
                android:id="@+id/btnMp3Upload"
                style="@style/DefaultButtonText"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/general2_hoverbtnselect"
                android:padding="10dp"
                android:text="@string/ring_upload"
                android:textColor="@color/upload_textcolor"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >

            <Button
                android:id="@+id/btnVideoUpload"
                style="@style/DefaultButtonText"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/general1_hoverbtnselect"
                android:padding="10dp"
                android:text="@string/video_upload"
                android:textColor="@color/upload_textcolor"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>